
# both of the following two choices for PKG_LIBS work
# PKG_LIBS = -Wl,--whole-archive -ladp -Wl,-no-whole-archive
PKG_LIBS = -Wl,--whole-archive adp/libadp.a -Wl,-no-whole-archive

PKG_CXXFLAGS = -Wall

$(SHLIB): adp/libadp.a

adp/libadp.a:
	@(cd adp && $(MAKE) libadp.a \
	CXX="$(CXX)" CPPFLAGS="$(ALL_CPPFLAGS)" CXXFLAGS="$(ALL_CXXFLAGS)" AR="$(AR)")
